<p id="notice"><%= notice %></p>

<h1>Fornecedores</h1>
<div class="col-md-12">
              <div class="card">

                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                        <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Cpf</th>
      <th>Produtos</th>
      <th colspan="3">Acoes</th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.email %></td>
        <td><%= fornecedor.telefone %></td>
        <td><%= fornecedor.cpf %></td>
        <td>
          <% fornecedor.produtos.each do |produto|  %>
          <%= produto.descricao %>
          <% end %>
        </td>
        <td><%= link_to 'Mostrar', fornecedor ,class: 'btn btn-primary'%>
        <%= link_to 'Editar', edit_fornecedor_path(fornecedor),class: 'btn btn-warning' %>
        <%= link_to 'Excluir', fornecedor, method: :delete, data: { confirm: 'Voce tem certeza em excluir o fornecedor ' << fornecedor.nome << ' ?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Fornecedor', new_fornecedor_path,class: 'btn btn-primary' %>
