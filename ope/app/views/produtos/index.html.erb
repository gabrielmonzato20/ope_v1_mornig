<p id="notice"><%= notice %></p>

<h1>Produtos</h1>
<div class="col-md-12">
              <div class="card">

                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
<thead class=" text-primary">
    <tr>
      <th>Descricao</th>
      <th>Marca</th>
      <th>Cor</th>
      <th>Preco</th>
      <th colspan="3">Acoes</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.descricao %></td>
        <td><%= produto.marca %></td>
        <td style='background:<%= produto.cor %>'></td>
        <td><%= produto.preco %></td>
        <td><%= link_to 'Mostrar', produto ,class: 'btn btn-primary' %>
      <%= link_to 'Editar', edit_produto_path(produto),class: 'btn btn-warning' %>
        <%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Voce tem certeza em deletar o produto' << produto.descricao << '?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>

<br>

<%= link_to 'Novo Produto', new_produto_path, class: 'btn btn-primary' %>
