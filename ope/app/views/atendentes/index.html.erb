<p id="notice"><%= notice %></p>

<h1>Atendentes</h1>
<div class="col-md-12">
              <div class="card">

                <div class="card-body">
                  <div class="table-responsive">
<table class="table">
  <thead class=" text-primary">
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Senha</th>
      <th colspan="3">Acoes</th>
    </tr>
  </thead>

  <tbody>
    <% @atendentes.each do |atendente| %>
      <tr>
        <td><%= atendente.nome %></td>
        <td><%= atendente.email %></td>
        <td><%= atendente.senha %></td>
        <td><%= link_to 'Mostrar', atendente ,class: 'btn btn-primary'%></td>
        <td><%= link_to 'Editar', edit_atendente_path(atendente),class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', atendente, method: :delete, data: { confirm: 'Tem certeza em deletar o atendente '<< atendente.nome << ' ?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>




<%= link_to 'Novo Atendente', new_atendente_path, class: 'btn btn-primary' %>
