<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>
<div class="col-md-12">
              <div class="card">

                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                          <tr>
      <th>Cliente</th>
      <th>Atendente</th>
      <th>Produtos</th>
      <th>Total</th>
      <th colspan="3">Acoes</th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
    <%valor = 0%>
      <tr>
        <td><%= pedido.cliente.Nome %></td>
        <td><%= pedido.atendente.nome %></td>
        <td>
          <% pedido.produtos.each do |produto| %>

          <%= produto.descricao =%>
          <%end%>
          </td>
          <td>
          <% pedido.produtos.each do |produto| %>

            <% valor = valor + produto.preco %>
            <%end%>
            R$<%= valor =%>
            </td>
        <td><%= link_to 'Mostrar', pedido,class: 'btn btn-primary'  %>
        <%= link_to 'Editar', edit_pedido_path(pedido),class: 'btn btn-warning' %>
          <%= link_to 'Excluir', pedido, method: :delete, data: { confirm: 'Voce tem certeza em deletar o pedido '<< pedido.id << ' ?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>


