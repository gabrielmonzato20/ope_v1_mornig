<h1>Pedido Prdoutos</h1>

<table>
  <thead>
    <tr>
      <th>Pedido</th>
      <th>Produto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedido_prdoutos.each do |pedido_prdouto| %>
      <tr>
        <td><%= pedido_prdouto.pedido_id %></td>
        <td><%= pedido_prdouto.produto_id %></td>
        <td><%= link_to 'Show', pedido_prdouto %></td>
        <td><%= link_to 'Edit', edit_pedido_prdouto_path(pedido_prdouto) %></td>
        <td><%= link_to 'Destroy', pedido_prdouto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

